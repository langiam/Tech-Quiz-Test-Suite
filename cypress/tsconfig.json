{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress/**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
